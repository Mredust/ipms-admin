<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ipms.mapper.MeetingMaterialMapper">
    
    <resultMap type="MeetingMaterial" id="MeetingMaterialResult">
        <result property="id"    column="id"    />
        <result property="fileName"    column="file_name"    />
        <result property="fileType"    column="file_type"    />
        <result property="fileSize"    column="file_size"    />
        <result property="fileSort"    column="file_sort"    />
        <result property="openDownload"    column="open_download"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectMeetingMaterialVo">
        select id, file_name, file_type, file_size, file_sort, open_download, create_time from meeting_material
    </sql>

    <select id="selectMeetingMaterialList" parameterType="MeetingMaterial" resultMap="MeetingMaterialResult">
        <include refid="selectMeetingMaterialVo"/>
        <where>  
            <if test="fileName != null  and fileName != ''"> and file_name like concat('%', #{fileName}, '%')</if>
        </where>
    </select>
    
    <select id="selectMeetingMaterialById" parameterType="Long" resultMap="MeetingMaterialResult">
        <include refid="selectMeetingMaterialVo"/>
        where id = #{id}
    </select>

    <insert id="insertMeetingMaterial" parameterType="MeetingMaterial" useGeneratedKeys="true" keyProperty="id">
        insert into meeting_material
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="fileType != null">file_type,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="fileSort != null">file_sort,</if>
            <if test="openDownload != null">open_download,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="fileType != null">#{fileType},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="fileSort != null">#{fileSort},</if>
            <if test="openDownload != null">#{openDownload},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateMeetingMaterial" parameterType="MeetingMaterial">
        update meeting_material
        <trim prefix="SET" suffixOverrides=",">
            <if test="fileName != null and fileName != ''">file_name = #{fileName},</if>
            <if test="fileType != null">file_type = #{fileType},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="fileSort != null">file_sort = #{fileSort},</if>
            <if test="openDownload != null">open_download = #{openDownload},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMeetingMaterialById" parameterType="Long">
        delete from meeting_material where id = #{id}
    </delete>

    <delete id="deleteMeetingMaterialByIds" parameterType="String">
        delete from meeting_material where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>